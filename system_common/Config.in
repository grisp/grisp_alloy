# Configure Common Grisp

config GRISP_TOP_DIR
	string
	option env="GRISP_TOP_DIR"

config GRISP_COMMON_SYSTEM_DIR
	string
	option env="GRISP_COMMON_SYSTEM_DIR"

config GRISP_TARGET_SYSTEM_DIR
	string
	option env="GRISP_TARGET_SYSTEM_DIR"

config GRISP_TARGET_NAME
	string "Grisp target name"
	default ""

# Load Grisp packages
source "$BR2_EXTERNAL_GRISP_PATH/package/erlinit/Config.in"
source "$BR2_EXTERNAL_GRISP_PATH/package/nbtty/Config.in"
source "$BR2_EXTERNAL_GRISP_PATH/package/grisp-config/Config.in"
source "$BR2_EXTERNAL_GRISP_PATH/package/erlang-rebar3/Config.in"
source "$BR2_EXTERNAL_GRISP_PATH/package/cryptoauthlib/Config.in"
source "$BR2_EXTERNAL_GRISP_PATH/package/grisp-updater-tools/Config.in.host"

# Load user options
menu "User-provided options"

source "$GRISP_TARGET_SYSTEM_DIR/Config.in"

endmenu
